---
import Navigation from './Navigation.astro';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const homeHref = `${base}/`;
---

<header class="bg-slate-900 border-b border-slate-800">
  <div class="max-w-7xl mx-auto px-4 pt-4 pb-0">
    <div class="flex items-baseline gap-3 mb-4">
      <a href={homeHref} class="text-xl font-bold text-white hover:text-k8s-light transition-colors">
        K8s Internals
      </a>
      <span class="text-sm text-slate-500">Interactive Deep Dive</span>
    </div>
    <Navigation />
  </div>
</header>
